<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ProfileActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_img"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    />
<TextView
    android:text="Nzeako Kosisochukwu Anthony"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/name"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="8dp"
    app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp" android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/imageView"/>
<View
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:id="@+id/view"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="16dp"
    android:background="#950A0A0A"
    android:layout_marginTop="32dp"
    app:layout_constraintTop_toBottomOf="@+id/name"/>
<TextView
    android:text="Track: Track 1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/track"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="16dp"
    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
    app:layout_constraintTop_toBottomOf="@+id/view" android:textSize="18sp"
    app:layout_constraintHorizontal_bias="0.0"/>
<TextView
    android:text="Country: Nigeria"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/country"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/track"
    android:textSize="18sp" app:layout_constraintHorizontal_bias="0.0"/>
<TextView
    android:text="Email: nzeakokosi7@gmail.com"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/email"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/country"
    android:textSize="18sp" app:layout_constraintHorizontal_bias="0.0" android:textAlignment="textStart"/>
<TextView
    android:text="Phone Number: +234 (0) 814-023-9921"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/phone_number"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/email"
    android:textSize="18sp" app:layout_constraintHorizontal_bias="0.0"/>
<TextView
    android:text="Slack Username: nzeakokosi7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/slack" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    app:layout_constraintTop_toBottomOf="@+id/phone_number" android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
    android:layout_marginTop="32dp"/>
</android.support.constraint.ConstraintLayout>

